{
  "extends": [
    "config:base",
    // we build docker images from camunda/connectors base docker image
    // in gh action build-and-publish
    "docker:disable"
  ],
  "labels": ["dependencies", "no milestone"],
  "packageRules": [
    {
      "matchManagers": ["maven"],
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
      "automerge": false,
      "rebaseWhen": "auto"
    },
    {
      "matchManagers": ["github-actions"],
      "description": "skip any release actions on main for auto-dep merges",
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
      "commitBody": "[skip ci]",
      "automerge": false
    },
    {
      "matchBaseBranches": ["/^release/.*/"],
      "matchUpdateTypes": ["major", "minor"],
      "enabled": false
    },
    {
      "matchPackagePrefixes": ["io.camunda.connector"],
      "enabled": false
    },
    {
      "matchManagers": ["maven"],
      "description" : "Exclude SNAPSHOT versions, renovate may suggest them for pre-release values.",
      "matchPackagePatterns": [".*"],
      "allowedVersions": "!/-SNAPSHOT$/"
    }
  ],
  "baseBranches": ["release/8.5"]
}